<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list_item"
    android:padding="5dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/ware_drawee_view"
        android:layout_alignParentStart="true"
        app:viewAspectRatio="1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true">

    </com.facebook.drawee.view.SimpleDraweeView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/ware_drawee_view"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_toRightOf="@+id/ware_drawee_view">

        <TextView
            android:id="@+id/ware_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:textColor="@color/ware_title_color"
            android:textSize="17sp" />

        <View
            style="@style/line_horizontal"
            />

        <TextView
            android:id="@+id/ware_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="20dp"
            android:textColor="@color/firebrick"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/ware_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#747474"
            android:textSize="12sp" />


        <Button
            style="@style/smallRedButton"
            android:id="@+id/btn_purchase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_gravity="end"
            android:text="立即购买" />

    </LinearLayout>


</RelativeLayout>